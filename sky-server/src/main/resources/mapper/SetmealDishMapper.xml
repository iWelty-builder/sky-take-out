<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <delete id="deletesetmeal">
        delete from sky_take_out.setmeal_dish  where setmeal_id=#{setmealId}
    </delete>
    <select id="setmealGetById" resultType="com.sky.entity.SetmealDish">
        select setmeal_id,dish_id,name,price,copies from sky_take_out.setmeal_dish
    </select>

    <select id="getSetmealIdsByDishIds" resultType="java.lang.Long">
        SELECT setmeal_id
        FROM setmeal_dish
        WHERE dish_id IN
        <foreach item="dishId" collection="dishIds" open="(" close=")" separator=",">
            #{dishId}
        </foreach>
    </select>

    <insert id="setmealadd">
        insert into setmeal_dish (setmeal_id, dish_id, name, price, copies) VALUES
        <foreach collection="setmealDish" item="smd" separator=",">
            (#{smd.setmealId},#{smd.dishId},#{smd.name},#{smd.price},#{smd.copies})
        </foreach>
    </insert>
</mapper>
